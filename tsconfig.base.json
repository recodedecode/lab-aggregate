{
  "compileOnSave": false,
  "compilerOptions": {
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@recodedecode/aggregate": ["packages/aggregate/src/index.ts"]
    },
    "typeRoots": [
      "./@types/",
      "./node_modules/@types/"
    ]
  },
  "exclude": ["node_modules", "tmp"],
}
